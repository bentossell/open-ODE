# Staging Environment Configuration
# This file contains staging-specific environment variables

# Node Environment
NODE_ENV=staging
PORT=3000
WS_PORT=8081

# Database Configuration (Staging)
DATABASE_URL=postgresql://staging_user:${DB_PASSWORD}@staging-db.example.com:5432/claude_terminal_staging
REDIS_URL=redis://staging-redis.example.com:6379

# Supabase Configuration (Staging)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=${STAGING_SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${STAGING_SUPABASE_SERVICE_KEY}

# JWT Configuration
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRY=12h

# API Configuration
API_URL=https://staging.claude-terminal.example.com
WS_URL=wss://staging.claude-terminal.example.com:8081

# Feature Flags
ENABLE_AUTH=true
ENABLE_FILE_UPLOAD=true
MAX_MESSAGE_LENGTH=50000
MAX_WORKSPACE_SIZE=50MB

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=300000

# CORS Configuration
CORS_ORIGIN=https://staging.claude-terminal.example.com

# Session Configuration
SESSION_SECRET=${STAGING_SESSION_SECRET}
SESSION_MAX_AGE=43200000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=200

# Monitoring
NEW_RELIC_APP_NAME=claude-terminal-staging
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# Error Tracking
SENTRY_DSN=${STAGING_SENTRY_DSN}
SENTRY_ENVIRONMENT=staging

# Staging Specific
DEBUG=false
ENABLE_PROFILING=true