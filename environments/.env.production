# Production Environment Configuration
# This file contains production-specific environment variables
# WARNING: Ensure all sensitive values are properly managed through secrets management

# Node Environment
NODE_ENV=production
PORT=3000
WS_PORT=8081

# Database Configuration (Production)
DATABASE_URL=${PROD_DATABASE_URL}
REDIS_URL=${PROD_REDIS_URL}

# Supabase Configuration (Production)
SUPABASE_URL=${PROD_SUPABASE_URL}
SUPABASE_ANON_KEY=${PROD_SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${PROD_SUPABASE_SERVICE_KEY}

# JWT Configuration
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRY=4h

# API Configuration
API_URL=https://api.claude-terminal.com
WS_URL=wss://api.claude-terminal.com:8081

# Feature Flags
ENABLE_AUTH=true
ENABLE_FILE_UPLOAD=true
MAX_MESSAGE_LENGTH=50000
MAX_WORKSPACE_SIZE=25MB

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=300000

# CORS Configuration
CORS_ORIGIN=https://claude-terminal.com,https://www.claude-terminal.com

# Session Configuration
SESSION_SECRET=${PROD_SESSION_SECRET}
SESSION_MAX_AGE=14400000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
NEW_RELIC_APP_NAME=claude-terminal-production
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# Error Tracking
SENTRY_DSN=${PROD_SENTRY_DSN}
SENTRY_ENVIRONMENT=production

# Security Headers
HELMET_ENABLED=true
FORCE_HTTPS=true

# CDN Configuration
CDN_URL=https://cdn.claude-terminal.com

# Production Specific
DEBUG=false
ENABLE_PROFILING=false
CLUSTER_MODE=true
CLUSTER_WORKERS=auto